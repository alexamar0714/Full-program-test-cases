    <artifactId>iws-persistence</artifactId>
    <name>IWS - Persistence</name>
    <description>IntraWebService - Persistence Module</description>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
            </resource>
        </resources>
